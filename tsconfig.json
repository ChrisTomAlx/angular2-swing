{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "declaration": true,
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist",
        "removeComments": false
    },
    "angularCompilerOptions": {
	    "genDir": "aot"
    },
    "include": [
        "src/**/*",
        "typings/**/*"
    ],
    "exclude": [
        "node_modules",
        "typings/main.d.ts",
        "typings/main"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
